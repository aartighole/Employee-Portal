<table class="table">
    <thead>
        <tr>
            <th scope="col">Sr.No.</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">Department</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @{int i = 1; }   @* It will declare value of i as 1*@
        @foreach (var obj in Model)
        {

            <tr>
                <th>
                    @(i++)
                </th>
                <td>
                    @obj.FirstName
                </td>
                <td>
                    @obj.LastName
                </td>
                <td>
                    @obj.Department
                </td>
                <td>
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                </td>
                <td>
                <a button type="button" class="btn btn-danger" id="Btn" asp-area="" asp-controller="Employee" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                </td>
              
            </tr>
        }

    </tbody>
</table>
