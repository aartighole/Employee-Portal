@model Employee_new;
<form method="post" asp-controller="Employee" asp-action="Edit">
    <div asp-validation-summary="All"></div> 
    <div class="form-group row">
        <label for="Name" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="First Name" asp-for="FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="Name" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Last Name" asp-for="LastName">
        </div>
    </div>

    <div class="form-group row">
        <label for="Department" class="col-sm-2 col-form-label">Department</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Department" asp-for="Department">
        </div>
    </div>
    <div class="form-group row">
        <label for="Date" class="col-sm-2 col-form-label">Joining Date</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Joining Date" asp-for="JoiningDate">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
</form>